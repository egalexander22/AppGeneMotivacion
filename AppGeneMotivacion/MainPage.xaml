<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGeneMotivacion.MainPage">

    <ScrollView>
        <StackLayout
            Background="Purple"
            Padding="10,0"
            Spacing="40">
            <Label
                Text="BIENVENIDO"
                TextColor="Aquamarine"
                HorizontalTextAlignment="Start"
                FontSize="Large"
                FontAttributes="Italic"/>

            <Border Stroke="Aquamarine"
                    StrokeThickness="4"
                    StrokeShape="RoundRectangle 40,0,0,40">
                <Label
                Text="LO QUE TE VA A MOTIVAR"
                HorizontalTextAlignment="Center"
                FontAttributes="Italic"
                TextColor="Aquamarine"
                FontFamily=""
               Style="{StaticResource Headline}"
               SemanticProperties.HeadingLevel="Level1" />
            </Border>
            <Image
                Source="brain.png"
                Margin="0"
                HeightRequest="250"/>

            <Button
                x:Name="CounterBtn"
                BorderWidth="10"
                BackgroundColor="Aquamarine"
                TextColor="Black"
                FontAttributes="Bold"
                FontSize="Large"
                Text="lo que te motivara HOY"
                Margin="10,0,10,0"
                HorizontalOptions="Center" >
            </Button>
            <Border Stroke="Aquamarine"
                    StrokeThickness="4"
                    StrokeShape="RoundRectangle 40,40,40,40"
                    Background="Aquamarine">
                <Label
                HeightRequest="120"
                Margin="10,0,10,10"/>
            </Border>



        </StackLayout>
    </ScrollView>

</ContentPage>
